{
  "name": "Java Microservices CI/CD",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "hashicorp.terraform",
        "redhat.vscode-yaml",
        "vscjava.vscode-java-pack"
      ]
    }
  },
  "postCreateCommand": "bash infra/bootstrap.sh",
  "forwardPorts": [8080,9000,8081,32080,32443]
}
